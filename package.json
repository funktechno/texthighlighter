{
  "name": "@funktechno/texthighlighter",
  "version": "2.0.8",
  "description": "a no dependency typescript supported tool for highlighting user selected content",
  "main": "index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest -c ./jest.config.js --forceExit --verbose -i --no-cache",
    "test:coverage": "jest --forceExit --coverage --verbose",
    "test:watch": "jest --watchAll",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/funktechno/texthighlighter.git"
  },
  "keywords": [
    "typescript",
    "highlight",
    "text",
    "mobile",
    "dom",
    "html",
    "color",
    "annotation",
    "selection",
    "range"
  ],
  "author": "lastlink",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/funktechno/texthighlighter/issues"
  },
  "homepage": "https://github.com/funktechno/texthighlighter#readme",
  "devDependencies": {
    "@types/eslint": "^6.1.8",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "@types/jest": "^26.0.4",
    "eslint": "^6.8.0",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "ts-jest": "^26.1.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "ts-node": "^8.10.2"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  }
}
