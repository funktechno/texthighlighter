    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest single run",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "-c",
                "./jest.config.js",
                "--verbose",
                "-i",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest watch run",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "-c",
                "./jest.config.js",
                "--verbose",
                "-i",
                "--no-cache",
                "--watchAll"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}